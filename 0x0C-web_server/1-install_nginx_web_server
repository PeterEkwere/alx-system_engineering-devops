#!/usr/bin/env bash
# This script creates a new ubuntu machine with all config

sudo apt update
sudo apt install -y nginx

sudo sh -c 'echo "Hello from script!" > /var/www/html/success.html'

echo  "server {
     listen     80 default_server;
     listen     [::]:80 default_server;
     root       /var/www/html;
     index      success.html success.htm;
}" | sudo tee /etc/nginx/sites-available/default > /dev/null

sudo service nginx restart

curl localhost
